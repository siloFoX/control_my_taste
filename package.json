{
  "name": "control_my_taste",
  "version": "1.0.0",
  "type": "module",
  "description": "개인 음악 리스트 관리, 평점, 추천 서비스",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "npm run build:electron && wait-on http://localhost:5173 && electron .",
    "build:electron": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json",
    "build": "npm run build:electron && vite build && electron-builder",
    "build:react": "vite build",
    "preview": "vite preview"
  },
  "keywords": ["music", "youtube", "electron", "react"],
  "author": "silofox",
  "license": "MIT",
  "dependencies": {
    "googleapis": "^166.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.silofox.control-my-taste",
    "productName": "Control My Taste",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
